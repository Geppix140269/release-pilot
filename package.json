{
  "name": "release-pilot",
  "version": "1.0.0",
  "description": "GitHub Action for automated PR summaries, semantic versioning, changelog updates, and release notes",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "package": "npm run build"
  },
  "keywords": [
    "github-action",
    "release-automation",
    "changelog",
    "semantic-versioning"
  ],
  "author": "ReleasePilot",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2",
    "conventional-commits-parser": "^5.0.0",
    "js-yaml": "^4.1.0",
    "semver": "^7.6.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@types/conventional-commits-parser": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  }
}