# ReleasePilot Environment Variables
# Copy this file to .env and fill in your values

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_HERE

# MongoDB Configuration (Optional - for analytics)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/releasepilot
ANALYTICS_DB=releasepilot

# Site Configuration
URL=https://your-domain.netlify.app

# Email Service (Optional - choose one)
# SendGrid
SENDGRID_API_KEY=YOUR_SENDGRID_KEY_HERE
SENDGRID_FROM_EMAIL=noreply@releasepilot.io

# OR Postmark
POSTMARK_API_KEY=YOUR_POSTMARK_KEY_HERE
POSTMARK_FROM_EMAIL=noreply@releasepilot.io

# License Server (Future)
LICENSE_SERVER_URL=https://api.releasepilot.io
LICENSE_SERVER_KEY=YOUR_LICENSE_SERVER_KEY_HERE